---
import { MetaBalls } from "../components/MetaBalls";

interface Props {
  classes?: string;
}

const { classes } = Astro.props;
---

<div class:list={["block-container", classes]}>
  <div class="block primary"></div>
  <div class="block secondary"></div>
  <div class="block main">
    <div class="custom-background">
      <MetaBalls
        color="#393a3e"
        cursorBallColor="#393a3e"
        cursorBallSize={2}
        ballCount={20}
        animationSize={10}
        enableMouseInteraction={true}
        enableTransparency={true}
        hoverSmoothness={0.15}
        clumpFactor={0.9}
        speed={0.2}
        client:only
      />
    </div>
    <slot />
  </div>
</div>

<style scoped>
  .custom-background {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
    top: 0;
  }
  .upper {
    z-index: 4;
  }
  .block-container {
    display: flex;
    position: relative;
    margin: 0 auto;
    width: 100%;
    height: calc(100vh - 128px);
    overflow: hidden;
    justify-content: center;
    align-items: center;
  }
  .block {
    position: absolute;
    width: 80%;
    height: 100%;
    border: 1px solid #000;
    border-radius: 8px;
    left: 0;
    right: 0;
    margin: auto;
  }
  .primary {
    z-index: 1;
    top: 0;
    height: 150%;
    background-color: #393a3e;
  }
  .secondary {
    left: -100px;
    top: 50px;
    background-color: #edcfaa;
    z-index: 2;
  }
  .main {
    right: 40px;
    top: 100px;
    background-color: #23262d;
    z-index: 3;

    display: flex;
    justify-content: center;
    align-items: start;
    padding: 32px;
  }
</style>
