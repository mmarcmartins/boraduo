---
interface Props {
  classes?: string;
  subtitle: string;
}

const { classes = "", subtitle } = Astro.props;
---

<h2 class:list={["subtitle", classes]}>{subtitle}</h2>

<style>
  .subtitle {
    display: inline-block;
    background-color: #edcfaa;
    border-radius: 8px;
    border: 2px solid #000;
    padding: 10px 30px;
    text-align: center;
    max-width: 100%;
    font-size: 1.2rem;
    font-weight: 300;
  }
</style>
