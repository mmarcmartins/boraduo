---
import Subtitle from "../components/Subtitle.astro";
import { ActionButton } from "../components/ActionButton";
import BlockPages from "../components/BlockPages.astro";
---

<BlockPages title="Boraduo - Página não encontrada">
  <Subtitle subtitle="Parece que você está perdido, confie no mago !" />
  <div class="description">
    <img src="/images/mage.svg" alt="você está perdido" />
  </div>
  <ActionButton className="btn-not-found">
    <a class="home-link" href="/"> Voltar a tela inicial </a>
  </ActionButton>
</BlockPages>

<style is:global>
  .home-link {
    text-decoration: none;
    color: #fff;
    text-align: center;
    width: 100%;
    font-weight: 300;
  }
  .btn-not-found {
    max-width: 300px;
  }
  .header-title {
    padding: 40px;
  }
</style>
