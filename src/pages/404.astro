---
import Main from "../layouts/Main.astro";
---

<Main title="Boraduo - Página não encontrada">
  <main class="container">
    <div class="error-content">
      <h1>404</h1>
      <h2>Página não encontrada</h2>
      <p>Ops! Parece que você se perdeu no caminho.</p>
      <a href="/" class="btn-home">Voltar para a página inicial</a>
    </div>
  </main>
</Main>

<style scoped>
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    padding: 20px;
  }

  .error-content {
    text-align: center;
    color: #fff;
    max-width: 600px;
  }

  h1 {
    font-family: 'Press Start 2P', cursive;
    font-size: 6rem;
    margin-bottom: 1rem;
    color: #FF5400;
  }

  h2 {
    font-family: 'Press Start 2P', cursive;
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
  }

  p {
    font-family: 'Poppins', sans-serif;
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  .btn-home {
    display: inline-block;
    background-color: #FF5400;
    color: #fff;
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
    padding: 12px 24px;
    border-radius: 8px;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .btn-home:hover {
    background-color: #FF7A33;
  }
</style> 