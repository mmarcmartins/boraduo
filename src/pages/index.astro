---
import Main from '../layouts/Main.astro';

---
<Main title="Boraduo - Home">
	<main class="container">
		<section class="wrapper">
			<div class="hunters">
				<div class="notice">
					<h2>Encontre seu duo de maneira mais simples</h2>
				</div>
				<img class="hunters-fig" src="../../public/images/duos.png" alt="Grupo de caÃ§adores">
			</div>
		</section>
	</main>
</Main>

<style scoped>
	.wrapper {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		column-gap: 28px;
		padding-top: 100px;
		padding-left: 40px;
		padding-right: 40px;
	}
	.hunters {
		display: grid;
		align-items: center;
		justify-items: center;
		.hunters-fig{ 
			width: 800px;
			max-width: 100%;
		}
		.notice {
			display: inline-block;
			background-color: #EDCFAA;
			border-radius: 8px;
			border: 2px solid #000;
			padding: 10px 30px;
			text-align: center;			
			max-width: 100%;
			font-size: .85rem;
			font-weight: 300;
		}
	}
	.container {
		max-width: 100%;
		width: 1920px;
		height: calc(100vh - 152px);
	}
</style>
