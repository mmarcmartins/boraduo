---
import { HomeForm } from "../components/HomeForm";
import Subtitle from "../components/Subtitle.astro";
import Main from "../layouts/Main.astro";
---

<Main title="Boraduo - Home">
  <script
    src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs"
    type="module"
    slot="header"></script>
  <main class="container">
    <section class="wrapper">
      <div class="hunters">
        <dotlottie-player
          class="bg-animation"
          layout={{ fit: "cover" }}
          src="/public/bganimation.json"
          background="transparent"
          speed="0.4"
          direction="1"
          playMode="normal"
          loop
          autoplay></dotlottie-player>
        <div class="notice">
          <h2></h2>
        </div>
        <Subtitle subtitle="Encontre seu duo de maneira mais simples" />
        <img
          class="hunters-fig"
          src="/images/duos.png"
          alt="Grupo de caÃ§adores"
        />
      </div>
      <div class="form">
        <HomeForm client:only />
      </div>
    </section>
  </main>
</Main>

<style scoped>
  .form {
    display: flex;
    justify-content: center;
  }
  .wrapper {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    column-gap: 28px;
    padding-top: 100px;
    padding-left: 40px;
    padding-right: 40px;
  }
  .hunters {
    display: grid;
    align-items: center;
    justify-items: center;
    position: relative;
    .hunters-fig {
      width: 800px;
      max-width: 110%;
    }
    .bg-animation {
      position: absolute;
      z-index: -1;
      width: 75vw;
      height: 1200px;
      left: -140px;
    }
  }
  .container {
    max-width: 100%;
    width: 1920px;
    height: calc(100vh - 152px);
  }
</style>
